<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/current_day_text_view"
        style="@style/current_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"/>
    <TextView
        android:id="@+id/turns_downloaded_text_view"
        style="@style/current_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"/>
    <TextView
        android:id="@+id/turns_processed_text_view"
        style="@style/current_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"/>
    <TextView
        android:id="@+id/turns_uploaded_text_view"
        style="@style/current_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"/>
    <TextView
        android:id="@+id/day_finished_text_view"
        style="@style/current_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"/>
</LinearLayout>